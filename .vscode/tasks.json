    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "python3 -m robotpy deploy",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // removes having to press Reset everytime when using the task. (the deploy command *SHOULD* kill itself upon launch.)
            "runOptions": {
                "instanceLimit": 2
            }
        }
    ]
}